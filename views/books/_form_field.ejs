<div class="form-row">
  <div class="form-item">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" value="<%= book.title %>" />
  </div>
  <div class="form-item">
    <label for="author">Author</label>
    <select name="author" id="author">
      <% authors.forEach(author => {%> <% if (author.id === book.author) { %>
      <option
        selected
        value="<%= author.id %>"
        label="<%= author.name %>"
      ></option>
      <% } else { %>
      <option value="<%= author.id %>" label="<%= author.name %>"></option>
      <%} %> <%}) %>
    </select>
  </div>
</div>

<div class="form-row">
  <div class="form-item">
    <label for="publishDate">Publish Date</label>
    <input
      type="date"
      name="publishDate"
      id="publishDate"
      value="<%= book.publishDate == null ? '': book.publishDate.toISOString().split('T')[0] %>"
    />
  </div>
  <div class="form-item">
    <label for="pageCount">Page Count</label>
    <input
      id="pageCount"
      type="number"
      name="pageCount"
      min="1"
      value="<%= book.pageCount %>"
    />
  </div>
</div>

<div class="form-row">
  <div class="form-item no-grow">
    <label for="cover">Cover</label>
    <input id="cover" type="file" name="cover" class="filepond" />
  </div>
  <div class="form-item">
    <label for="description">Description</label>
    <textarea id="description" name="description">
<%= book.description %></textarea
    >
  </div>
</div>
